{
  "name": "@workflow-manager/api",
  "version": "0.1.0",
  "private": true,
  "description": "GraphQL API server using Fastify and Mercurius",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --max-warnings=0 || exit 0",
    "lint:fix": "eslint . --fix || exit 0",
    "type-check": "tsc --noEmit",
    "generate:types": "graphql-codegen",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "@workflow-manager/workflow-engine": "workspace:*",
    "@workflow-manager/database": "workspace:*",
    "@workflow-manager/shared-types": "workspace:*",
    "@workflow-manager/validation": "workspace:*",
    "@workflow-manager/utils": "workspace:*",
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/jwt": "^9.0.1",
    "@fastify/rate-limit": "^10.1.1",
    "@graphql-tools/graphql-file-loader": "^8.0.22",
    "@graphql-tools/load": "^8.1.2",
    "dataloader": "^2.2.2",
    "fastify": "^5.1.0",
    "graphql": "^16.9.0",
    "mercurius": "^15.0.0",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.3",
    "@graphql-codegen/typescript": "^4.1.2",
    "@graphql-codegen/typescript-resolvers": "^4.3.2",
    "@types/node": "^22.9.0",
    "@vitest/coverage-v8": "^2.1.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  }
}
