{
  "name": "@workflow-manager/worker",
  "version": "0.1.0",
  "private": true,
  "description": "Background job processor for async workflow tasks",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/worker.ts",
    "build": "tsc",
    "start": "node dist/worker.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --max-warnings=0 || exit 0",
    "lint:fix": "eslint . --fix || exit 0",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "@workflow-manager/workflow-engine": "workspace:*",
    "@workflow-manager/database": "workspace:*",
    "@workflow-manager/shared-types": "workspace:*",
    "@workflow-manager/utils": "workspace:*",
    "bullmq": "^5.28.2",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@vitest/coverage-v8": "^2.1.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  }
}
