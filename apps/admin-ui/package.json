{
  "name": "@workflow-manager/admin-ui",
  "version": "0.1.0",
  "private": true,
  "description": "Admin dashboard for Market Operations built with SvelteKit",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "prettier --check . && eslint .",
    "lint:fix": "prettier --write . && eslint . --fix",
    "type-check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "clean": "rm -rf .svelte-kit build coverage"
  },
  "dependencies": {
    "@workflow-manager/shared-types": "workspace:*",
    "@sveltejs/adapter-node": "^5.2.9",
    "graphql": "^16.9.0",
    "graphql-request": "^7.1.2"
  },
  "devDependencies": {
    "@sveltejs/kit": "^2.8.5",
    "@sveltejs/vite-plugin-svelte": "^5.0.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.8",
    "@types/node": "^22.9.0",
    "@vitest/coverage-v8": "^2.1.5",
    "@vitest/ui": "^2.1.5",
    "autoprefixer": "^10.4.20",
    "daisyui": "^4.12.24",
    "eslint": "^9.15.0",
    "eslint-plugin-svelte": "^2.46.1",
    "happy-dom": "^18.0.1",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.7",
    "svelte": "^5.2.9",
    "svelte-check": "^4.0.8",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.6.3",
    "vite": "^6.0.1",
    "vitest": "^2.1.5"
  }
}
