{
  "name": "workflow-manager",
  "version": "0.1.0",
  "private": true,
  "description": "Full-stack workflow management system for Elia Group market participant onboarding",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.12.3",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,svelte}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,svelte}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:migrate": "pnpm --filter @workflow-manager/database migrate",
    "db:seed": "pnpm --filter @workflow-manager/database seed",
    "generate:types": "turbo run generate:types"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.7",
    "turbo": "^2.2.3",
    "typescript": "^5.6.3"
  }
}
